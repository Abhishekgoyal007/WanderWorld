<% layout('/layouts/boilerplate.ejs') %>
<div class="row">
    <div class="col-8 offset-2">
    <body>
        <br><br>
        <h1>Create your new listing</h1>
        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" required placeholder="Enter title" class="form-control">
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Please enter a valid title</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="listing[description]" required class="form-control"></textarea>
                <div class="invalid-feedback">Please enter a description</div>
                <div class="valid-feedback">nice description!</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <input type="file" name="listing[image]" class="form-control">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" required placeholder="Enter price" class="form-control">
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" required placeholder="Enter location" class="form-control">
                    <div class="invalid-feedback">Please enter a valid location</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" required placeholder="Enter country" class="form-control">
                <div class="invalid-feedback">Please enter a valid country name</div>
            </div>
            <button class="btn" style="background-color: #fe424d; color: white;">Add</button>
        </form><br><br>
    </body>
    </div>
</div>