<% layout('/layouts/boilerplate.ejs') %>
<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-4">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" required placeholder="Enter username" class="form-control">
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" required placeholder="Enter email" class="form-control">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input type="password" name="password" id="password" required placeholder="Enter password" class="form-control">
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>